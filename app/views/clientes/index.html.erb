<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
<% @clientes.each do |cliente| %>
    <tr>
        <td><%= cliente.nome %></td>
        <td><%= link_to 'Ver cliente', cliente, class:"btn btn-default" %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente), class:"btn btn-default" %></td>
        <td><%= link_to 'Deletar', cliente, method: :delete, data: { confirm: 'Tem certeza que deseja deletar?' }, class:"btn btn-default" %></td>
    </tr>
<% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar Novo Cliente', new_cliente_path %>
