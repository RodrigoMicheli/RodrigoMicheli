<p id="notice"><%= notice %></p>

<h1>Vendas</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Produto</th>
      <th>Cliente</th>
      <th>Quantidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendas.each do |venda| %>
      <tr>
        <td><%= venda.produto.nome %></td>
        <td><%= venda.cliente.nome %></td>
        <td><%= venda.quantidade %></td>
        <td><%= link_to 'Visualizar', venda %></td>
        <td><%= link_to 'Alterar', edit_venda_path(venda) %></td>
        <td><%= link_to 'Deletar', venda, method: :delete, data: { confirm: 'Tem certeza que deseja deletar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

